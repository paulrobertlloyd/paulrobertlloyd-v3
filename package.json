{
  "name": "paulrobertlloyd.com",
  "version": "3.0.0",
  "description": "The personal website of Paul Robert Lloyd",
  "keywords": [
    "indieweb",
    "personal-website",
    "jekyll-website"
  ],
  "homepage": "https://paulrobertlloyd.com",
  "bugs": "https://github.com/paulrobertlloyd/paulrobertlloyd.com/issues",
  "license": "SEE LICENSE IN LICENSE",
  "author": "Paul Robert Lloyd",
  "repository": {
    "type": "git",
    "url": "https://github.com/paulrobertlloyd/paulrobertlloyd.com.git"
  },
  "scripts": {
    "test": "xo || stylelint **/*.scss"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "files": "**/*.scss",
    "rules": {
      "declaration-empty-line-before": "never",
      "string-quotes": "double"
    },
    "ignoreFiles": [
      "src/**/vendor/**"
    ]
  },
  "xo": {
    "envs": "browser",
    "esnext": false,
    "space": true,
    "ignores": [
      "src/**/vendor/**",
      "www/**"
    ]
  },
  "devDependencies": {
    "stylelint": "^7.12.0",
    "stylelint-config-standard": "^16.0.0",
    "xo": "^0.18.2"
  }
}
