source "https://rubygems.org"

# Jekyll (generates static files)
gem 'jekyll'
group :jekyll_plugins do
  gem 'jekyll-archives'
  gem 'jekyll-assets'
  gem 'jekyll-crosspost-to-medium'
  gem 'jekyll-figure'
  gem 'jekyll-paginate'
  gem 'jekyll-roman'
  gem 'jekyll-sitemap'
  gem 'jekyll-slugify_underscore'
  gem 'jekyll-typogrify'

  gem 'autoprefixer-rails'
  gem 'susy'
  gem 'uglifier'
  gem 'ruby-thumbor'
end

# Rake (manages build tasks)
gem 'rake'
