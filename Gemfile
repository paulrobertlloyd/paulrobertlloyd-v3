source "https://rubygems.org"

# Jekyll (generates static files)
gem 'jekyll'
group :jekyll_plugins do
  gem 'jekyll-archives', :github => 'jekyll/jekyll-archives', :branch => 'master'
  gem 'jekyll-assets'
  gem 'jekyll-crosspost-to-medium'
  gem 'jekyll-figure'
  gem 'jekyll-paginate'
  gem 'jekyll-sitemap'
  gem 'jekyll-slugify_underscore'
  gem 'jekyll-typogrify'

  gem 'autoprefixer-rails'
  gem 'uglifier'
  gem 'ruby-thumbor'
end

# Rake (manages build tasks)
gem 'rake'
