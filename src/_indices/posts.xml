---
permalink: /journal/feed.xml
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <id>{{ site.url }}/</id>
  <title>{{ site.title }} / Journal</title>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <author>
    <name>{{ site.author.name }}</name>
    <email>{{ site.author.email }}</email>
    <uri>{{ site.author.url }}</uri>
  </author>
  <link href="{{ site.url }}/journal/feed" rel="self"/>
  <link href="{{ site.url }}/journal/"/>
  <generator uri="http://jekyllrb.com" version="{{ jekyll.version }}">Jekyll</generator>
  <icon>{{ site.url }}images/icon.png</icon>
  <rights>© {{ site.time | date:"%Y" }} {{ site.author.name }}. Content Creative Commons licensed unless otherwise stated.</rights>

  {% assign journal = site.documents | where:"journal",true | sort:"date" | reverse %}
  {% for item in journal limit:25 %}
  <entry>
    {% case item.collection %}
    {% when "galleries" %}
      {% assign title_prefix = "Gallery: " %}
    {% when "links" %}
      {% assign title_prefix = "Link: " %}
    {% else %}
      {% assign title_prefix = "★ " %}
    {% endcase %}
    <id>{{ site.url }}{{ item.id }}</id>
    <title>{{ title_prefix }}{{ item.title | markdownify | strip_html | xml_escape }}</title>
    <updated>{{ item.date | date_to_xmlschema }}</updated>
    <link href="{{ site.url }}{{ item.url }}"/>
    <content type="html">
<![CDATA[
{% if item.image.src %}
  {% figure caption:"{{ item.image.caption }}" %}
    {% include image.html src=item.image.src %}
  {% endfigure %}
{% endif %}

{% if item.embed.src %}
  {% figure %}
    {% include embed.html src=item.embed.src %}
  {% endfigure %}
{% endif %}

{{ item.content | markdownify | strip_newlines }}

{% if item.collection == "links" %}
  <p><a href="{{ item.link }}">Visit this link &#10217;</a></p>
{% endif %}
]]>
    </content>
  </entry>
  {% endfor %}
</feed>
