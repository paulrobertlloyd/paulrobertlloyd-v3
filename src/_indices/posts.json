---
permalink: /journal/feed.json
---
{
  "version": "https://jsonfeed.org/version/1",
  "title": {{ site.title | append:" / Journal" | jsonify }},
  "description": {{ site.description | jsonify }},
  "home_page_url": {{ site.url | append:"/journal/" | jsonify }},
  "feed_url": {{ site.url | append:"/journal/feed.json" | jsonify }},
  "icon": "{{ site.url }}{% asset_path icon.png %}",
  "favicon": "/favicon.ico",
  "author": {
    "name": {{ site.author.name | jsonify }},
    "url": {{ site.author.url | jsonify }},
    "avatar": {{ site.author.avatar | jsonify }}
  },
  {% assign journal = site.documents | where:"journal",true | sort:"date" | reverse %}
  "items": [{% for post in journal limit:25 %}
    {
      "id": {{ post.id | jsonify }},
      "url": {{ post.url | prepend:site.url | jsonify }},
      {% if post.link %}"external_url": {{ post.link | jsonify }},{% endif %}
      "title": {{ post.title | smartify | jsonify }},
      "summary": {{ post.excerpt | jsonify }},
      {% if post.image.url %}"image": {{ post.image.url | prepend:site.url | jsonify }},{% endif %}
      "content_html": {{ post.content | markdownify | jsonify }},
      "date_published": {{ post.date | date_to_xmlschema | jsonify }},
      {% if post.tags %}"tags": {{ post.tags | jsonify }}{% endif %}
    }{% if forloop.last %}{% else %},{% endif %}
  {% endfor %}]
}
