---
permalink: /journal/feed.json
---
{
  "version": "https://jsonfeed.org/version/1",
  "title": {{ site.title | append:" / Journal" | jsonify }},
  "description": {{ site.description | jsonify }},
  "home_page_url": {{ site.url | append:"/journal/" | jsonify }},
  "feed_url": {{ site.url | append:"/journal/feed.json" | jsonify }},
  "icon": "{{ site.url }}/images/icon.png",
  "favicon": "/favicon.ico",
  "author": {
    "name": {{ site.author.name | jsonify }},
    "url": {{ site.author.url | jsonify }},
    "avatar": {{ site.author.avatar | jsonify }}
  },
  {% assign posts = site.posts | sort: "date" | reverse %}
  "items": [{% for item in posts limit:25 %}
    {
      "id": {{ item.id | jsonify }},
      "url": {{ item.url | prepend:site.url | jsonify }},
      {% if item.link %}"external_url": {{ item.link | jsonify }},{% endif %}
      "title": {{ item.title | smartify | jsonify }},
      "summary": {{ item.excerpt | jsonify }},
      {% if item.image.url %}"image": {{ item.image.url | prepend:site.url | jsonify }},{% endif %}
      "content_html": {{ item.content | markdownify | jsonify }},
      "date_published": {{ item.date | date_to_xmlschema | jsonify }},
      {% if item.tags %}"tags": {{ item.tags | jsonify }}{% endif %}
    }{% if forloop.last %}{% else %},{% endif %}
  {% endfor %}]
}
